{% extends 'base_backoffice.html.twig' %}

{% block title %}Creer un nouveau cours{% endblock %}

{% block body %}
<style>
    .course-create-page {
        --ink: #0f172a;
        --muted: #5b667a;
        --line: #d7dfeb;
        --surface: #ffffff;
        --brand: #0ea5a3;
        --brand-dark: #0b7f7d;
        --accent: #f59e0b;
        --hero-a: #0f766e;
        --hero-b: #155e75;
        --hero-c: #1d4ed8;
        font-family: "Heebo", sans-serif;
    }

    .create-hero {
        position: relative;
        overflow: hidden;
        border-radius: 24px;
        margin: 1.75rem 1rem 0;
        padding: 3.25rem 1.25rem;
        background: linear-gradient(120deg, var(--hero-a), var(--hero-b) 55%, var(--hero-c));
        color: #fff;
        box-shadow: 0 24px 60px rgba(2, 44, 34, 0.24);
    }

    .create-hero::before,
    .create-hero::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
    }

    .create-hero::before {
        width: 240px;
        height: 240px;
        right: -70px;
        top: -70px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.33), rgba(255, 255, 255, 0));
    }

    .create-hero::after {
        width: 200px;
        height: 200px;
        left: -55px;
        bottom: -80px;
        background: radial-gradient(circle, rgba(245, 158, 11, 0.45), rgba(245, 158, 11, 0));
    }

    .create-hero h1 {
        margin: 0;
        font-size: clamp(1.75rem, 4vw, 2.7rem);
        font-weight: 700;
        letter-spacing: 0.3px;
    }

    .create-hero p {
        margin: 0.85rem 0 0;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.92);
    }

    .create-shell {
        padding: 1.75rem 1rem 2.2rem;
    }

    .create-card {
        background: linear-gradient(170deg, rgba(255, 255, 255, 0.96), rgba(248, 251, 255, 0.96));
        border: 1px solid rgba(15, 23, 42, 0.07);
        border-radius: 24px;
        box-shadow: 0 22px 55px rgba(15, 23, 42, 0.1);
        backdrop-filter: blur(2px);
    }

    .create-card .card-body {
        padding: clamp(1.1rem, 2.8vw, 2.5rem);
    }

    .create-heading {
        color: var(--ink);
        font-size: clamp(1.2rem, 2.5vw, 1.6rem);
        font-weight: 700;
        margin-bottom: 0.35rem;
        letter-spacing: 0.2px;
    }

    .info-header {
        text-align: center;
        margin-bottom: 1.35rem;
    }

    .info-kicker {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.3rem 0.7rem;
        border-radius: 999px;
        background: rgba(14, 165, 163, 0.12);
        color: #0d7e7b;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.4px;
        margin-bottom: 0.55rem;
    }

    .info-subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 0.9rem;
    }

    .field-label {
        color: var(--ink);
        font-size: 0.94rem;
        font-weight: 700;
        margin-bottom: 0.45rem;
    }

    .form-section {
        border: 1px solid rgba(15, 23, 42, 0.08);
        border-radius: 16px;
        background: #fff;
        padding: 1rem;
    }

    .form-section-title {
        margin: 0 0 0.75rem;
        font-size: 1rem;
        font-weight: 700;
        color: var(--ink);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-section-title i {
        color: var(--brand-dark);
    }

    .modern-input {
        border: 1px solid var(--line);
        border-radius: 14px;
        padding: 0.82rem 0.95rem;
        font-size: 0.96rem;
        color: var(--ink);
        background: #fff;
        transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
    }

    .modern-input:focus {
        border-color: rgba(14, 165, 163, 0.65);
        box-shadow: 0 0 0 4px rgba(14, 165, 163, 0.14);
        transform: translateY(-1px);
    }

    .modern-input.is-invalid {
        border-color: #dc3545;
        box-shadow: none;
    }

    .form-note {
        margin-top: 0.4rem;
        color: var(--muted);
        font-size: 0.83rem;
    }

    .ai-assistant-box {
        border-style: dashed;
        border-color: rgba(14, 165, 163, 0.45);
        background: linear-gradient(180deg, rgba(14, 165, 163, 0.06), rgba(14, 165, 163, 0.02));
    }

    .btn-ai-generate {
        border-radius: 12px;
        font-weight: 700;
        padding: 0.65rem 1rem;
    }

    .ai-meta {
        font-size: 0.85rem;
        color: var(--muted);
    }

    .ai-meta.is-error {
        color: #b91c1c;
    }

    .ai-meta.is-ok {
        color: #0b7f7d;
    }

    .ai-preview {
        border: 1px solid rgba(15, 23, 42, 0.08);
        border-radius: 12px;
        background: #fff;
        padding: 0.8rem;
    }

    .ai-preview-title {
        margin: 0 0 0.45rem;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--ink);
    }

    .ai-preview ul,
    .ai-preview ol {
        margin-bottom: 0;
        padding-left: 1.15rem;
    }

    .ai-preview li {
        margin-bottom: 0.25rem;
        color: #223044;
        font-size: 0.88rem;
    }

    .ai-image-preview {
        display: block;
        width: 100%;
        max-width: 280px;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 12px;
        border: 1px solid rgba(15, 23, 42, 0.12);
    }

    .error-text {
        margin-top: 0.45rem;
        color: #dc3545;
        font-size: 0.86rem;
    }

    .create-actions {
        padding-top: 0.5rem;
    }

    .btn-create-modern {
        border: 0;
        border-radius: 13px;
        padding: 0.9rem 1.4rem;
        background: linear-gradient(135deg, var(--brand), var(--brand-dark));
        color: #fff;
        font-weight: 700;
        letter-spacing: 0.15px;
        transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease;
        box-shadow: 0 14px 28px rgba(11, 127, 125, 0.34);
    }

    .btn-create-modern:hover {
        transform: translateY(-2px);
        filter: brightness(1.02);
        box-shadow: 0 16px 30px rgba(11, 127, 125, 0.4);
        color: #fff;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        margin-top: 1rem;
        color: var(--brand-dark);
        font-weight: 600;
        text-decoration: none;
    }

    .back-link:hover {
        color: #095957;
        text-decoration: underline;
    }

    .reveal-up {
        animation: revealUp 0.45s ease both;
    }

    .reveal-up.delay-1 {
        animation-delay: 0.08s;
    }

    @keyframes revealUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .create-hero {
            margin: 1rem 0.75rem 0;
            border-radius: 18px;
            padding: 2.3rem 1rem;
        }

        .create-shell {
            padding: 1rem 0.75rem 1.5rem;
        }
    }
</style>

<section class="course-create-page">
    <div class="create-hero reveal-up">
        <div class="container">
            <h1>Creer un nouveau cours</h1>
            <p>Construisez une fiche claire et attractive pour une publication immediate.</p>
        </div>
    </div>

    <div class="create-shell">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">
                    <div class="card create-card reveal-up delay-1">
                        <div class="card-body">
                            <div class="info-header">
                                <span class="info-kicker">
                                    <i class="bi bi-journal-text"></i>
                                    Dossier cours
                                </span>
                                <h3 class="create-heading">Informations du cours</h3>
                                <p class="info-subtitle">Renseignez les champs essentiels pour publier rapidement.</p>
                            </div>

                            {{ form_start(form, {
                                'attr': {
                                    'novalidate': 'novalidate',
                                    'class': 'needs-validation'
                                }
                            }) }}

                            <div class="row g-3 g-md-4">
                                <div class="col-12">
                                    <div class="form-section">
                                        <h4 class="form-section-title">
                                            <i class="bi bi-info-circle"></i>
                                            Informations principales
                                        </h4>
                                        <div class="row g-3">
                                            <div class="col-12">
                                                {{ form_label(form.titre, null, { 'label_attr': {'class': 'field-label'} }) }}
                                                {{ form_widget(form.titre, {
                                                    'attr': {
                                                        'placeholder': 'Exemple : Mathematiques 6eme annee primaire',
                                                        'class': 'modern-input form-control form-control-lg' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : '')
                                                    }
                                                }) }}
                                                {% if form.titre.vars.errors|length > 0 %}
                                                    {% for error in form.titre.vars.errors %}
                                                        <div class="error-text">{{ error.message }}</div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>

                                            <div class="col-md-6">
                                                {{ form_label(form.matiere, null, { 'label_attr': {'class': 'field-label'} }) }}
                                                {{ form_widget(form.matiere, {
                                                    'attr': {
                                                        'placeholder': 'Exemple : Mathematiques, Francais, SVT...',
                                                        'class': 'modern-input form-control form-control-lg' ~ (form.matiere.vars.errors|length > 0 ? ' is-invalid' : '')
                                                    }
                                                }) }}
                                                {% if form.matiere.vars.errors|length > 0 %}
                                                    {% for error in form.matiere.vars.errors %}
                                                        <div class="error-text">{{ error.message }}</div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>

                                            <div class="col-md-6">
                                                {{ form_label(form.niveau, null, { 'label_attr': {'class': 'field-label'} }) }}
                                                {{ form_widget(form.niveau, {
                                                    'attr': {
                                                        'min': 1,
                                                        'max': 13,
                                                        'placeholder': '1 = CP, 7 = 1ere annee college...',
                                                        'class': 'modern-input form-control form-control-lg' ~ (form.niveau.vars.errors|length > 0 ? ' is-invalid' : '')
                                                    }
                                                }) }}
                                                {% if form.niveau.vars.errors|length > 0 %}
                                                    {% for error in form.niveau.vars.errors %}
                                                        <div class="error-text">{{ error.message }}</div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div
                                        id="js-course-ai-box"
                                        class="form-section ai-assistant-box"
                                        data-generate-url="{{ path('app_cours_ai_generate') }}"
                                        data-csrf-token="{{ csrf_token('cours_ai_generate') }}"
                                        data-generate-image-url="{{ path('app_cours_ai_generate_image') }}"
                                        data-csrf-image-token="{{ csrf_token('cours_ai_generate_image') }}"
                                        data-field-title="{{ form.titre.vars.id }}"
                                        data-field-subject="{{ form.matiere.vars.id }}"
                                        data-field-level="{{ form.niveau.vars.id }}"
                                        data-field-description="{{ form.description.vars.id }}"
                                        data-field-image-upload="{{ form.image.vars.id }}"
                                    >
                                        <h4 class="form-section-title">
                                            <i class="bi bi-robot"></i>
                                            Assistant IA
                                        </h4>
                                        <p class="form-note mt-0">
                                            Genere automatiquement une description, des objectifs, un plan de cours et un niveau suggere.
                                        </p>
                                        <div class="d-flex flex-wrap gap-2 align-items-center mt-2">
                                            <button type="button" id="js-course-ai-generate" class="btn btn-outline-primary btn-ai-generate">
                                                Generer avec IA
                                            </button>
                                            <span id="js-course-ai-status" class="ai-meta">Pret a generer.</span>
                                        </div>

                                        <div id="js-course-ai-preview" class="ai-preview mt-3 d-none">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <h5 class="ai-preview-title">Objectifs pedagogiques</h5>
                                                    <ul id="js-course-ai-objectives"></ul>
                                                </div>
                                                <div class="col-md-6">
                                                    <h5 class="ai-preview-title">Plan propose</h5>
                                                    <ol id="js-course-ai-plan"></ol>
                                                </div>
                                                <div class="col-12">
                                                    <h5 class="ai-preview-title mb-0">
                                                        Niveau suggere: <span id="js-course-ai-level">-</span>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-section">
                                        <h4 class="form-section-title">
                                            <i class="bi bi-text-paragraph"></i>
                                            Description
                                        </h4>
                                        {{ form_label(form.description, null, { 'label_attr': {'class': 'field-label'} }) }}
                                        {{ form_widget(form.description, {
                                            'attr': {
                                                'rows': 8,
                                                'placeholder': 'Decrivez objectifs, contenu detaille, public cible et competences visees...',
                                                'class': 'modern-input form-control form-control-lg' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.description.vars.errors|length > 0 %}
                                            {% for error in form.description.vars.errors %}
                                                <div class="error-text">{{ error.message }}</div>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-section">
                                        <h4 class="form-section-title">
                                            <i class="bi bi-image"></i>
                                            Media
                                        </h4>
                                        {{ form_label(form.image, null, { 'label_attr': {'class': 'field-label'} }) }}
                                        {{ form_widget(form.image, {
                                            'attr': {
                                                'class': 'modern-input form-control form-control-lg' ~ (form.image.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.image.vars.help is defined and form.image.vars.help %}
                                            <small class="form-note">{{ form.image.vars.help }}</small>
                                        {% endif %}
                                        {% if form.image.vars.errors|length > 0 %}
                                            {% for error in form.image.vars.errors %}
                                                <div class="error-text">{{ error.message }}</div>
                                            {% endfor %}
                                        {% endif %}

                                        <input
                                            type="hidden"
                                            id="js-course-ai-image-hidden"
                                            name="ai_generated_image"
                                            value="{{ app.request.request.get('ai_generated_image', '') }}"
                                        >

                                        <div class="mt-3 pt-3 border-top">
                                            <p class="form-note mt-0">
                                                Ou genere une image automatiquement a partir du titre et de la matiere.
                                            </p>
                                            <div class="d-flex flex-wrap gap-2 align-items-center">
                                                <button type="button" id="js-course-ai-image-generate" class="btn btn-outline-secondary btn-ai-generate">
                                                    Generer image IA
                                                </button>
                                                <span id="js-course-ai-image-status" class="ai-meta">
                                                    Aucune image IA generee.
                                                </span>
                                            </div>

                                            {% set aiImageFilename = app.request.request.get('ai_generated_image', '') %}
                                            <div id="js-course-ai-image-preview-wrap" class="ai-preview mt-3 {{ aiImageFilename ? '' : 'd-none' }}">
                                                <h5 class="ai-preview-title">Apercu image du cours</h5>
                                                <img
                                                    id="js-course-ai-image-preview"
                                                    class="ai-image-preview"
                                                    src="{{ aiImageFilename ? asset('uploads/images/cours/' ~ aiImageFilename) : '' }}"
                                                    alt="Apercu image IA"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="create-actions mt-4 text-center">
                                <button type="submit" class="btn btn-create-modern w-100">
                                    Creer et soumettre le cours
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>

                    <div class="text-center">
                        <a href="{{ path('app_cours_index') }}" class="back-link">
                            <span aria-hidden="true">&larr;</span>
                            Retour a la liste des cours
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
(() => {
    const box = document.getElementById('js-course-ai-box');
    if (!box) return;

    const generateBtn = document.getElementById('js-course-ai-generate');
    const statusEl = document.getElementById('js-course-ai-status');
    const previewEl = document.getElementById('js-course-ai-preview');
    const objectivesEl = document.getElementById('js-course-ai-objectives');
    const planEl = document.getElementById('js-course-ai-plan');
    const levelHintEl = document.getElementById('js-course-ai-level');

    const titleInput = document.getElementById(box.dataset.fieldTitle || '');
    const subjectInput = document.getElementById(box.dataset.fieldSubject || '');
    const levelInput = document.getElementById(box.dataset.fieldLevel || '');
    const descriptionInput = document.getElementById(box.dataset.fieldDescription || '');
    const imageUploadInput = document.getElementById(box.dataset.fieldImageUpload || '');
    const imageGenerateBtn = document.getElementById('js-course-ai-image-generate');
    const imageStatusEl = document.getElementById('js-course-ai-image-status');
    const imageHiddenInput = document.getElementById('js-course-ai-image-hidden');
    const imagePreviewWrap = document.getElementById('js-course-ai-image-preview-wrap');
    const imagePreview = document.getElementById('js-course-ai-image-preview');

    const setStatus = (message, kind = '') => {
        if (!statusEl) return;
        statusEl.textContent = message;
        statusEl.classList.remove('is-error', 'is-ok');
        if (kind === 'error') statusEl.classList.add('is-error');
        if (kind === 'ok') statusEl.classList.add('is-ok');
    };

    const setImageStatus = (message, kind = '') => {
        if (!imageStatusEl) return;
        imageStatusEl.textContent = message;
        imageStatusEl.classList.remove('is-error', 'is-ok');
        if (kind === 'error') imageStatusEl.classList.add('is-error');
        if (kind === 'ok') imageStatusEl.classList.add('is-ok');
    };

    const renderList = (container, items) => {
        if (!container) return;
        container.innerHTML = '';
        (Array.isArray(items) ? items : []).forEach((item) => {
            const clean = String(item || '').trim();
            if (!clean) return;
            const li = document.createElement('li');
            li.textContent = clean;
            container.appendChild(li);
        });
    };

    const readJsonResponse = async (response) => {
        const raw = await response.text();
        if (!raw) return {};
        try {
            return JSON.parse(raw);
        } catch (_) {
            return {};
        }
    };

    generateBtn?.addEventListener('click', async () => {
        const title = String(titleInput?.value || '').trim();
        const subject = String(subjectInput?.value || '').trim();
        const level = String(levelInput?.value || '').trim();
        if (!title && !subject) {
            setStatus('Saisissez au moins un titre ou une matiere avant la generation.', 'error');
            return;
        }

        generateBtn.disabled = true;
        setStatus('Generation en cours...');

        try {
            const response = await fetch(box.dataset.generateUrl || '', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    _token: box.dataset.csrfToken || '',
                    title,
                    subject,
                    level,
                }),
            });

            const data = await readJsonResponse(response);
            if (!response.ok) {
                setStatus(data.error || 'Generation impossible pour le moment.', 'error');
                return;
            }

            const structuredDescription = String(
                data.structured_description || data.description || ''
            ).trim();
            if (structuredDescription && descriptionInput) {
                descriptionInput.value = structuredDescription;
            }

            if (data.suggested_level && levelInput) {
                levelInput.value = String(data.suggested_level);
            }

            renderList(objectivesEl, data.objectives);
            renderList(planEl, data.plan);

            if (levelHintEl) {
                levelHintEl.textContent = data.suggested_level ? String(data.suggested_level) : '-';
            }

            previewEl?.classList.remove('d-none');
            const sourceLabel = data.source === 'ai' ? 'IA' : 'mode local';
            setStatus(`Brouillon genere (${sourceLabel}). Vous pouvez modifier le texte avant validation.`, 'ok');
        } catch (_) {
            setStatus('Erreur reseau pendant la generation.', 'error');
        } finally {
            generateBtn.disabled = false;
        }
    });

    imageGenerateBtn?.addEventListener('click', async () => {
        const title = String(titleInput?.value || '').trim();
        const subject = String(subjectInput?.value || '').trim();

        if (!title && !subject) {
            setImageStatus('Saisissez au moins un titre ou une matiere avant la generation.', 'error');
            return;
        }

        imageGenerateBtn.disabled = true;
        setImageStatus('Generation image en cours...');

        try {
            const response = await fetch(box.dataset.generateImageUrl || '', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    _token: box.dataset.csrfImageToken || '',
                    title,
                    subject,
                }),
            });

            const data = await readJsonResponse(response);
            if (!response.ok) {
                setImageStatus(data.error || 'Generation image impossible pour le moment.', 'error');
                return;
            }

            const filename = String(data.filename || '').trim();
            const url = String(data.url || '').trim();

            if (!filename || !url) {
                setImageStatus('Reponse image invalide.', 'error');
                return;
            }

            if (imageHiddenInput) {
                imageHiddenInput.value = filename;
            }

            if (imageUploadInput) {
                imageUploadInput.value = '';
            }

            if (imagePreview) {
                imagePreview.src = `${url}?v=${Date.now()}`;
            }

            imagePreviewWrap?.classList.remove('d-none');

            const sourceLabel = data.source === 'ai' ? 'IA' : 'mode local';
            setImageStatus(`Image generee (${sourceLabel}).`, 'ok');
        } catch (_) {
            setImageStatus('Erreur reseau pendant la generation image.', 'error');
        } finally {
            imageGenerateBtn.disabled = false;
        }
    });

    imageUploadInput?.addEventListener('change', () => {
        const hasUpload = !!(imageUploadInput.files && imageUploadInput.files.length > 0);
        if (!hasUpload) {
            return;
        }

        if (imageHiddenInput) {
            imageHiddenInput.value = '';
        }

        setImageStatus('Upload manuel selectionne (prioritaire).', 'ok');
    });
})();
</script>
{% endblock %}
