{% extends 'base_frontoffice.html.twig' %}
{% trans_default_domain 'messages' %}

{% block title %}{{ 'parent.dashboard_title'|trans }}{% endblock %}

{% block body %}
<section class="pt-0">
    <div class="container-fluid px-0">
        <div class="card bg-blue h-100px h-md-180px rounded-0" style="background:url('{{ asset('assets/images/pattern/04.png') }}') no-repeat center center; background-size:cover;"></div>
    </div>
    <div class="container mt-n4">
        <div class="row">
            <div class="col-12">
                <div class="card bg-transparent card-body pb-0 px-0 mt-2 mt-sm-0">
                    <div class="row d-sm-flex justify-content-sm-between mt-2 mt-md-0">
                        <div class="col-auto">
                            <div class="avatar avatar-xxl position-relative mt-n3">
                                <img class="avatar-img rounded-circle border border-white border-3 shadow" src="{{ asset('assets/images/avatar/09.jpg') }}" alt="Parent avatar">
                                <span class="badge text-bg-primary rounded-pill position-absolute top-50 start-100 translate-middle mt-4 mt-md-5 ms-n3 px-md-3">{{ 'nav.instructor'|trans }}</span>
                            </div>
                        </div>
                        <div class="col d-sm-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="my-1 fs-4">{{ 'parent.dashboard_title'|trans }}</h1>
                                <p class="mb-0 text-body">{{ 'parent.subtitle'|trans }}</p>
                            </div>
                            <div class="mt-2 mt-sm-0">
                                <a href="{{ path('front_courses') }}" class="btn btn-outline-primary mb-0">{{ 'parent.view_all_courses'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pt-0 pb-5">
    <div class="container">
        <div class="row g-4 mb-4">
            <div class="col-sm-6 col-lg-4">
                <div class="d-flex justify-content-center align-items-center p-4 bg-primary bg-opacity-10 rounded-3 h-100">
                    <span class="display-6 lh-1 text-primary mb-0"><i class="fas fa-book-open fa-fw"></i></span>
                    <div class="ms-4">
                        <h5 class="mb-0 fw-bold">{{ childrenCoursesCount }}</h5>
                        <p class="mb-0 h6 fw-light">{{ 'parent.children_courses_count'|trans }}</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="d-flex justify-content-center align-items-center p-4 bg-success bg-opacity-10 rounded-3 h-100">
                    <span class="display-6 lh-1 text-success mb-0"><i class="fas fa-list-ol fa-fw"></i></span>
                    <div class="ms-4">
                        <h5 class="mb-0 fw-bold">{{ childrenLessonsCount }}</h5>
                        <p class="mb-0 h6 fw-light">{{ 'parent.children_lessons_count'|trans }}</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="d-flex justify-content-center align-items-center p-4 bg-orange bg-opacity-15 rounded-3 h-100">
                    <span class="display-6 lh-1 text-orange mb-0"><i class="fas fa-layer-group fa-fw"></i></span>
                    <div class="ms-4">
                        <h5 class="mb-0 fw-bold">{{ allCoursesCount }}</h5>
                        <p class="mb-0 h6 fw-light">{{ 'parent.total_courses_platform'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-transparent border rounded-3" id="children-courses">
            <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center">
                <h3 class="mb-0">{{ 'parent.children_courses_title'|trans }}</h3>
                <a href="{{ path('front_courses') }}" class="btn btn-sm btn-primary">{{ 'parent.view_all_courses'|trans }}</a>
            </div>
            <div class="card-body">
                {% if childrenCourses is not empty %}
                    <div class="table-responsive border-0">
                        <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="border-0 rounded-start">{{ 'student.course_title'|trans }}</th>
                                    <th scope="col" class="border-0">{{ 'student.total_lectures'|trans }}</th>
                                    <th scope="col" class="border-0 rounded-end">{{ 'student.action'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for c in childrenCourses %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="w-100px">
                                                    <img src="{{ c.image ? asset('uploads/images/cours/' ~ c.image) : asset('assets/images/courses/4by3/01.jpg') }}" class="rounded" alt="{{ c.titre }}">
                                                </div>
                                                <div class="mb-0 ms-2">
                                                    <h6 class="mb-1">{{ c.titre }}</h6>
                                                    <span class="badge bg-primary bg-opacity-10 text-primary">{{ c.matiere }}</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ c.lecons|length }}</td>
                                        <td class="text-nowrap">
                                            <a href="{{ path('front_cours_show', {'id': c.id}) }}" class="btn btn-sm btn-primary-soft">
                                                <i class="bi bi-eye me-1"></i>{{ 'parent.view_course'|trans }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <p class="mb-3">{{ 'parent.no_children_courses'|trans }}</p>
                        <a href="{{ path('front_courses') }}" class="btn btn-primary btn-sm">{{ 'parent.go_add_courses'|trans }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
