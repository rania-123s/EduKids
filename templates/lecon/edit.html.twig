{% extends 'base_backoffice.html.twig' %}

{% block title %}Modifier la leçon{% endblock %}

{% block body %}

<!-- =======================
Page Banner START -->
<section class="py-0 bg-blue h-200px align-items-center d-flex rounded-0"
         style="background:url('{{ asset('assets/images/pattern/04.png') }}') no-repeat center center; background-size:cover;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Modifier la leçon</h1>
                <p class="text-white mb-0">Modifiez les informations de votre leçon</p>
            </div>
        </div>
    </div>
</section>
<!-- Page Banner END -->

<!-- =======================
Form START -->
<section class="pt-5 pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <div class="card bg-transparent border rounded-3 shadow">
                    <div class="card-body p-4 p-lg-5">

                        <h3 class="mb-4 text-center">Informations de la leçon</h3>

                        {{ form_start(form, {
                            'attr': {
                                'class': 'needs-validation'
                            }
                        }) }}

                        <div class="row g-4">

                            <!-- Titre -->
                            <div class="col-12">
                                <div class="mb-3">
                                    {{ form_label(form.titre, null, {
                                        'label_attr': {'class': 'form-label fw-bold'}
                                    }) }}
                                    {{ form_widget(form.titre, {
                                        'attr': {
                                            'placeholder': 'Exemple : Introduction aux fractions',
                                            'class': 'form-control form-control-lg' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.titre.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.titre.vars.errors %}
                                                <div class="text-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Cours -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.cours, null, {
                                        'label_attr': {'class': 'form-label fw-bold'}
                                    }) }}
                                    {{ form_widget(form.cours, {
                                        'attr': {
                                            'class': 'form-select form-select-lg' ~ (form.cours.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.cours.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.cours.vars.errors %}
                                                <div class="text-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Ordre -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.ordre, null, {
                                        'label_attr': {'class': 'form-label fw-bold'}
                                    }) }}
                                    {{ form_widget(form.ordre, {
                                        'attr': {
                                            'min': 1,
                                            'placeholder': 'Exemple : 1, 2, 3...',
                                            'class': 'form-control form-control-lg' ~ (form.ordre.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.ordre.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.ordre.vars.errors %}
                                                <div class="text-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Type de média -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.media_type, null, {
                                        'label_attr': {'class': 'form-label fw-bold'}
                                    }) }}
                                    {{ form_widget(form.media_type, {
                                        'attr': {
                                            'placeholder': 'Exemple : video, pdf, image, text',
                                            'class': 'form-control form-control-lg' ~ (form.media_type.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.media_type.vars.help is defined and form.media_type.vars.help %}
                                        <small class="form-text text-muted d-block mt-1">{{ form.media_type.vars.help }}</small>
                                    {% endif %}
                                    {% if form.media_type.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.media_type.vars.errors %}
                                                <div class="text-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- URL du média -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.media_url, null, {
                                        'label_attr': {'class': 'form-label fw-bold'}
                                    }) }}
                                    {{ form_widget(form.media_url, {
                                        'attr': {
                                            'placeholder': 'https://exemple.com/video.mp4',
                                            'class': 'form-control form-control-lg' ~ (form.media_url.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.media_url.vars.help is defined and form.media_url.vars.help %}
                                        <small class="form-text text-muted d-block mt-1">{{ form.media_url.vars.help }}</small>
                                    {% endif %}
                                    {% if form.media_url.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.media_url.vars.errors %}
                                                <div class="text-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                        </div>

                        <!-- Boutons -->
                        <div class="mt-5 text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                                Enregistrer les modifications
                            </button>
                            <a href="{{ path('app_lecon_index') }}" class="btn btn-secondary btn-lg px-5 py-3 ms-2">
                                Annuler
                            </a>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_lecon_index') }}" class="text-muted small">
                        ← Retour à la liste des leçons
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Form END -->

{% endblock %}
