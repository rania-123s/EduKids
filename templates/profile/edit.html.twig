{% extends 'base_frontoffice.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold mb-0">
                <i class="bi bi-person-fill me-2"></i> Edit Profile
            </h1>
            <p class="text-muted">Update your personal information</p>
        </div>
    </div>

    <!-- Profile Form Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white p-4">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-pencil-square me-2"></i> Profile Information
                    </h5>
                </div>

                <div class="card-body p-4">
                    {% if app.flashes('success') %}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>{{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endif %}

                    {% if app.flashes('error') %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endif %}

                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.firstName, 'First Name') }}
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control mt-2'}}) }}
                                    {% if form.firstName.vars.errors|length > 0 %}
                                        <div class="text-danger small mt-1">
                                            {{ form_errors(form.firstName) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.lastName, 'Last Name') }}
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control mt-2'}}) }}
                                    {% if form.lastName.vars.errors|length > 0 %}
                                        <div class="text-danger small mt-1">
                                            {{ form_errors(form.lastName) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-group">
                                {{ form_label(form.email, 'Email Address') }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control mt-2'}}) }}
                                {% if form.email.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        {{ form_errors(form.email) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary fw-bold'}}) }}
                            <a href="javascript:history.back()" class="btn btn-outline-secondary fw-bold">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom p-4">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-info-circle me-2"></i> Profile Info
                    </h5>
                </div>
                <div class="card-body p-4">
                    <p class="small text-muted mb-3">
                        <i class="bi bi-info-circle me-1"></i> Keep your profile information up to date to ensure accurate communication.
                    </p>
                    <div class="d-flex flex-column gap-3">
                        <div>
                            <p class="small text-muted mb-1">Account Status</p>
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i> Active
                            </span>
                        </div>
                        <div>
                            <p class="small text-muted mb-1">Member Since</p>
                            <p class="small">{{ 'now'|date('d M Y') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
