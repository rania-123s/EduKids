{% extends 'base_backoffice.html.twig' %}

{% block title %}Liste des Ressources{% endblock %}

{% block body %}
<div class="dashboard-content-one">
    <!-- Breadcubs Area Start Here -->
    <div class="breadcrumbs-area">
        <h3>Ressources</h3>
        <ul>
            <li>
                <a href="{{ path('app_admin_page') }}">Accueil</a>
            </li>
            <li>Liste des Ressources</li>
        </ul>
    </div>
    <!-- Breadcubs Area End Here -->

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Table Area Start Here -->
    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1 mb-4">
                <div class="item-title">
                    <h3><i class="fas fa-boxes text-info me-2"></i> Toutes les Ressources</h3>
                </div>
                <div class="dropdown">
                    <a href="{{ path('app_ressource_new') }}" class="btn-fill-lg bg-blue-dark btn-hover-yellow">
                        <i class="fas fa-plus-circle me-1"></i> Nouvelle Ressource
                    </a>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center" style="width: 50px;">#</th>
                            <th><i class="fas fa-tag me-1"></i> Nom</th>
                            <th class="text-center"><i class="fas fa-folder me-1"></i> Type</th>
                            <th><i class="fas fa-calendar-alt me-1"></i> Événement</th>
                            <th class="text-center"><i class="fas fa-play me-1"></i> Début</th>
                            <th class="text-center"><i class="fas fa-stop me-1"></i> Fin</th>
                            <th class="text-center"><i class="fas fa-cubes me-1"></i> Qté</th>
                            <th class="text-center" style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ressource in ressources %}
                        <tr>
                            <td class="text-center text-muted">{{ loop.index }}</td>
                            <td>
                                <strong class="text-dark">{{ ressource.nom }}</strong>
                                {% if ressource.fichier %}
                                    <span class="badge bg-success ms-1" title="Fichier attaché">
                                        <i class="fas fa-paperclip"></i>
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% set typeColors = {
                                    'activite': 'primary',
                                    'pause': 'warning',
                                    'document': 'info',
                                    'materiel': 'secondary'
                                } %}
                                {% set typeIcons = {
                                    'activite': 'fa-running',
                                    'pause': 'fa-coffee',
                                    'document': 'fa-file-alt',
                                    'materiel': 'fa-tools'
                                } %}
                                <span class="badge bg-{{ typeColors[ressource.typeRessource] ?? 'secondary' }} px-3 py-2">
                                    <i class="fas {{ typeIcons[ressource.typeRessource] ?? 'fa-box' }} me-1"></i>
                                    {{ ressource.typeRessource|capitalize }}
                                </span>
                            </td>
                            <td>
                                {% if ressource.evenement %}
                                    <a href="{{ path('app_evenement_show', {'id': ressource.evenement.id}) }}" class="text-decoration-none">
                                        <i class="fas fa-calendar-check text-primary me-1"></i>
                                        {{ ressource.evenement.titre }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if ressource.dateDebut %}
                                    <small class="text-muted">{{ ressource.dateDebut|date('d/m/Y') }}</small><br>
                                    <small class="text-primary fw-bold">{{ ressource.dateDebut|date('H:i') }}</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if ressource.dateFin %}
                                    <small class="text-muted">{{ ressource.dateFin|date('d/m/Y') }}</small><br>
                                    <small class="text-danger fw-bold">{{ ressource.dateFin|date('H:i') }}</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if ressource.quantite is not null %}
                                    <span class="badge bg-dark rounded-pill px-3">{{ ressource.quantite }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}" 
                                       class="btn btn-sm btn-outline-info" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}" 
                                       class="btn btn-sm btn-outline-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_ressource_delete', {'id': ressource.id}) }}" 
                                          style="display: inline-block;" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la ressource « {{ ressource.nom }} » ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Aucune ressource trouvée</h5>
                                    <p class="text-muted mb-3">Commencez par créer votre première ressource</p>
                                    <a href="{{ path('app_ressource_new') }}" class="btn btn-primary">
                                        <i class="fas fa-plus-circle me-1"></i> Créer une ressource
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if ressources|length > 0 %}
            <div class="mt-3 text-muted">
                <small><i class="fas fa-info-circle me-1"></i> Total : {{ ressources|length }} ressource(s)</small>
            </div>
            {% endif %}
        </div>
    </div>
    <!-- Table Area End Here -->
</div>
{% endblock %}
